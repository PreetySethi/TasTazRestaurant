<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popupbg">


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_margin="50dp"
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@color/colorwhite"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:elevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorwhite"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    >

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/foodone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:background="@color/colorwhite"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="30dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txproductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chicken lolipop"
                                android:background="@color/colorwhite"
                                android:textColor="@color/colorblack"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/desc"
                                android:background="@color/colorwhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorblack"
                                android:text="2 pieces"
                                android:textSize="25sp" />

                        </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/popupbg"
                android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/popupbg"
                                android:layout_below="@+id/pizzaImage"
                                android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Order- ID :"
                                        android:background="@color/colorwhite"
                                        android:textColor="@color/colorblack"
                                        android:textSize="30sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_orderid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Order- ID"
                                        android:background="@color/colorwhite"
                                        android:textColor="@color/colorblack"
                                        android:textSize="30sp"
                                        />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/popupbg"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="DATE :"
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                    />

                                                <TextView
                                                    android:id="@+id/or_date"
                                                    android:layout_width="100dp"
                                                    android:layout_height="wrap_content"
                                                    android:text="Date"
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                    />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="DELIVERED BY :"
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                    />

                                                <TextView
                                                    android:id="@+id/or_deliver"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Delivered "
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                    />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="PAYMENT :"
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                    />

                                                <TextView
                                                    android:id="@+id/or_payment"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="payment"
                                                    android:textColor="@color/colorblack"
                                                    android:background="@color/colorwhite"
                                                    android:textAllCaps="true"
                                                    android:textSize="28sp"
                                                     />
                                </LinearLayout>
                            </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/view_cart_button_dialog"
                android:layout_width="250dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="DELIVERED"
                android:textStyle="bold"
                android:background="@drawable/et_bg"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textAlignment="center"/>

        </LinearLayout>

</RelativeLayout>