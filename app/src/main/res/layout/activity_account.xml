<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginModule.Fragment.Activities.AccountActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_history"
            android:padding="2dp"
            android:layout_marginRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblue"
            android:textSize="20sp"
            android:text="Account Details">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@color/colorblue"
        android:layout_marginEnd="20dp"
        android:layout_height="2dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" Name :" />
            <TextView
                android:id="@+id/pro_name"
                android:textSize="20sp"
                android:textColor="@color/colorblue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text=" SimplistQ Solutions " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" Email  :" />
            <TextView
                android:id="@+id/pro_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" sethy@gmail.com " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" verified :" />
            <TextView
                android:id="@+id/email_verified"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"

                android:textSize="20sp"
                android:text=" email id verified / email id not verified " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorblue"
                android:text=" Default Address :" />
            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" la villa residency building no 1, street al sadd " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:textSize="20sp"
                android:text=" Contact :" />
            <TextView
                android:id="@+id/pro_mobile"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorblue"
                android:text=" +974 78787878 " />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>