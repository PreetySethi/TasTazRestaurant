<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popupbg">


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >

                    <ImageView
                        android:id="@+id/pizzaImage"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/foodone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="30dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txproductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chicken lolipop"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 pieces"
                                android:textSize="15sp" />

                        </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/pizzaImage"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Order- ID"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/or_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    />


                <TextView
                    android:id="@+id/or_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered "
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/or_payment"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="payment"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                     />
            </LinearLayout>

            <TextView
                android:id="@+id/view_cart_button_dialog"
                android:layout_width="150dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="DELIVERED"
                android:textStyle="bold"
                android:background="@drawable/et_bg"
                android:textColor="#fff"
                android:textAlignment="center"/>
        </LinearLayout>

</RelativeLayout>