<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    tools:context=".Fragment.ProfileFragment">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <!-- TODO: Update blank fragment layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorblue"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/title_history"
                                android:layout_marginRight="38dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorwhite"
                                android:textSize="40sp"
                                android:text="Profile">
                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:background="@color/colorwhite"
                            android:layout_marginEnd="50dp"
                            android:layout_height="3dp">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/colorblue"
                            android:layout_height="wrap_content">
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/img_profile"
                                android:layout_width="155dp"
                                android:layout_height="155dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/dummyprofile"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_width="5dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorwhite"
                                    android:textSize="48sp"
                                    android:id="@+id/name"
                                    android:text="Profile Name"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorwhite"
                                    android:id="@+id/country"
                                    android:textSize="30sp"
                                    android:text="Street, Doha"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="90dp"
                        android:layout_width="match_parent"
                        android:background="@color/colorwhite"
                        android:layout_height="140dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_marginStart="40dp"
                            android:background="@drawable/blue"
                            android:layout_height="100dp">

                        </LinearLayout>
                        <TextView
                            android:id="@+id/pro_account"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="Account"
                            android:textSize="38sp"
                            android:layout_marginStart="30dp"
                            android:layout_height="wrap_content">

                        </TextView>
                        <View
                            android:layout_marginEnd="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="?android:attr/listDivider" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/righttab"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@color/colorwhite"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorwhite"
                            android:layout_height="140dp">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_marginStart="40dp"
                                android:background="@drawable/yellow"
                                android:layout_height="100dp">

                            </LinearLayout>
                            <TextView
                                android:id="@+id/pro_address"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:text="Addresses"
                                android:textSize="38sp"
                                android:layout_marginStart="30dp"
                                android:layout_height="wrap_content">

                            </TextView>
                            <View
                                android:layout_marginEnd="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/righttab"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorwhite"
                            android:layout_height="140dp">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_marginStart="40dp"
                                android:background="@drawable/green"
                                android:layout_height="100dp">

                            </LinearLayout>
                            <TextView
                                android:id="@+id/pro_payment"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:text="Payment"
                                android:textSize="38sp"
                                android:layout_marginStart="30dp"
                                android:layout_height="wrap_content">

                            </TextView>
                            <View
                                android:layout_marginEnd="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/righttab"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorwhite"
                            android:layout_height="140dp">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="120dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/orange"
                                android:layout_height="120dp">

                            </LinearLayout>
                            <TextView
                                android:id="@+id/pro_settings"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"

                                android:text="Settings"
                                android:textSize="38sp"
                                android:layout_marginStart="30dp"
                                android:layout_height="wrap_content">

                            </TextView>
                            <View
                                android:layout_marginEnd="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/righttab"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"

                            android:background="@color/colorwhite"
                            android:layout_height="140dp">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_marginStart="40dp"
                                android:background="@drawable/bluetor"
                                android:layout_height="100dp">

                            </LinearLayout>
                            <TextView
                                android:id="@+id/pro_reward"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:text="Reward Credits"
                                android:textSize="38sp"
                                android:layout_marginStart="30dp"
                                android:layout_height="wrap_content">

                            </TextView>
                            <View
                                android:layout_marginEnd="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/righttab"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>